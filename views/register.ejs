  <meta name="assignment" content="Assignment 2 - Travel Experts Agency Website">
  
  <title>Travel Experts Agency - Register Page</title>
  <%- include('./partials/css-global'); %>
  <link rel="stylesheet" href="css/register.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>
  
  <!--This section contains the navigation bar which will be at the top of the page-->
  <%- include('./partials/header-nav'); %>

  <main>
    <!--This section contains a registration form for users sign up-->
    <div id="register">
      
      <!--Registration form using fieldset, legend, label and input type-->
      <form action="https://formspree.io/xgennzer" method="POST">
        <fieldset>
          <legend></legend>
          <label class="required"><span>Name</span>
            <input type="text" placeholder="Enter full name" required>
          </label>    
          <label class="required"><span>Email</span>
            <input type="email" placeholder="Enter full name" required>
          </label>                  
          <label class="required">
            <span>Phone</span>
            <input type="tel" placeholder="Enter phone number (including country and area code)">
          </label>
          <label class="required">
            <span>Password</span>

            <!--Minimum password length defined-->
            <input type="password" placeholder="Password should be minimum of 8 characters" minlength="8" required>
          </label>
          <label class="required">
            <span>Confirm Password</span>
            <input type="password" placeholder="same as entered above" minlength= "8" required>
          </label>
          <label class= "checkbox">Subscribe to Newsletter <span class="checkmark"></span>
            <input type="checkbox">
          </label>     
        </fieldset>

        <!--sign up button-->
        <button>Sign Up</button>
      </form>    
    </div>
  </main>

  <!--Footer will be below the page-->
  <%- include('./partials/foot'); %>

  <!--This contains the javascript for hamburger menu-->
  <%- include('./partials/gallery-js'); %>
</body>
</html>